<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- interest.rate.period name,period_type period -->
        <record id="interest_rate_period_1" model="interest.rate.period">
            <field name="name">Diario</field>
            <field name="period_type">days</field>
            <field name="period">1</field>
        </record>

        <record id="interest_rate_period_2" model="interest.rate.period">
            <field name="name">Semanal</field>
            <field name="period_type">weeks</field>
            <field name="period">1</field>
        </record>

        <record id="interest_rate_period_3" model="interest.rate.period">
            <field name="name">Quincenal</field>
            <field name="period_type">weeks</field>
            <field name="period">2</field>
        </record>

        <record id="interest_rate_period_4" model="interest.rate.period">
            <field name="name">Mensual</field>
            <field name="period_type">months</field>
            <field name="period">1</field>
        </record>

        <record id="interest_rate_period_5" model="interest.rate.period">
            <field name="name">Bimestral</field>
            <field name="period_type">months</field>
            <field name="period">2</field>
        </record>

        <record id="interest_rate_period_6" model="interest.rate.period">
            <field name="name">Trimestral</field>
            <field name="period_type">months</field>
            <field name="period">3</field>
        </record>

        <record id="interest_rate_period_7" model="interest.rate.period">
            <field name="name">Semestral</field>
            <field name="period_type">months</field>
            <field name="period">6</field>
        </record>

        <record id="interest_rate_period_8" model="interest.rate.period">
            <field name="name">Anual</field>
            <field name="period_type">years</field>
            <field name="period">1</field>
        </record>

     <!-- crear datos para interest.rule para odoo 15 name interest_rate condition, rate_period_id -->
        <record id="interest_rule_1" model="interest.rule">
            <field name="name">Interés 1</field>
            <field name="interest_rate">0.01</field>
            <field name="rate_period_id" ref="interest_rate_period_1"/>
        </record>

        <record id="interest_rule_2" model="interest.rule">
            <field name="name">Interés 2</field>
            <field name="interest_rate">0.02</field>
            <field name="rate_period_id" ref="interest_rate_period_2"/>
        </record>

        <record id="interest_rule_3" model="interest.rule">
            <field name="name">Interés 3</field>
            <field name="interest_rate">0.03</field>
            <field name="rate_period_id" ref="interest_rate_period_3"/>
        </record>

        <record id="interest_rule_4" model="interest.rule">
            <field name="name">Interés 4</field>
            <field name="interest_rate">0.04</field>
            <field name="rate_period_id" ref="interest_rate_period_4"/>
        </record>

        <record id="interest_rule_5" model="interest.rule">
            <field name="name">Interés 5</field>
            <field name="interest_rate">0.05</field>
            <field name="rate_period_id" ref="interest_rate_period_5"/>
        </record>

        <record id="interest_rule_6" model="interest.rule">
            <field name="name">Interés 6</field>
            <field name="interest_rate">0.06</field>
            <field name="rate_period_id" ref="interest_rate_period_6"/>
        </record>

        <record id="interest_rule_7" model="interest.rule">
            <field name="name">Interés 7</field>
            <field name="interest_rate">0.07</field>
            <field name="rate_period_id" ref="interest_rate_period_7"/>
        </record>

        <record id="interest_rule_8" model="interest.rule">
            <field name="name">Interés 8</field>
            <field name="interest_rate">0.08</field>
            <field name="rate_period_id" ref="interest_rate_period_8"/>
        </record>   
    </data>
</odoo>
