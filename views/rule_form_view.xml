<odoo>
    <data>
    <record id="view_rule_form" model="ir.ui.view">
        <field name="name">Rule Form View</field>
        <field name="model">interest.rule</field>
        <field name="arch" type="xml">
            
        <form class="oe_form">
    <sheet>
        <div class="oe_title">
            <h1>
                <field name="name" class="oe_inline"/>
            </h1>
        </div>
        <group class="oe_form_group_row">
            <group class="oe_form_group_col_6">
                <field name="interest_rate"/>
            </group>
            <group class="oe_form_group_col_6">
                <field name="rate_period_id"/>
                    </group>
        </group>
        <!-- ... other fields or elements ... -->
        <!-- notebook for python codition  -->
        <notebook>
            <page string="Condition">
                <field name="condition"/>
            </page>
        </notebook>
    </sheet>
    
</form>

        </field>
    </record>

    <record id="account_view_move_form_inherit_interest_line" model="ir.ui.view">
        <field name="name">account.view_move_form.inherit.interest.line</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@id='invoice_tab']" position="after">
                <page string="Interest Lines" attrs="{'invisible': [('move_type', '=', 'entry')]}">
                    <field name="interest_line_ids" context="{'default_move_id': active_id}">
                        <tree editable="bottom">
                            <field name="invoice_id"/>
                            <field name="interest_amount"/>
                            <field name="interest_rule_id"/>
                        </tree>
                        <!-- You can also include a form view within the page if needed -->
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    </data>
</odoo>